@using ProductStore.Web.DTOs
@model ProductDTO
@{
    ViewData["Title"] = "Nuevo Producto";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
            <li class="breadcrumb-item active">Nuevo Producto</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="card">

        <div class="card-header">
            <h3 class="m-0 font-weight-bold text-primary">Nuevo Producto</h3>
        </div>

        <div class="card-body mt-3">

            <form asp-action="Create" method="POST" class="row g-3">
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" placeholder="@Html.DisplayFor(dto => dto.Name)">
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Price" class="form-control" placeholder="@Html.DisplayFor(dto => dto.Price)">
                        <label asp-for="Price"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Stock" class="form-control" placeholder="@Html.DisplayFor(dto => dto.Stock)">
                        <label asp-for="Stock"></label>
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>
         
                <div class="col-md-12">
                    <div class="form-floating">
                        <select asp-for="categoryId" asp-items="Model.Categories" class="form-control"></select>
                        <label asp-for="categoryId"></label>
                        <span asp-validation-for="categoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <button class="btn btn-primary" type="submit">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>

            </form>

        </div>
    </div>
</section>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
